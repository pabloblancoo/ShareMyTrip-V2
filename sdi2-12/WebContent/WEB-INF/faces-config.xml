<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<managed-bean>
		<managed-bean-name>controller</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanTrips</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuario</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanUsuario</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viajes</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanViajes</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>alta</from-outcome>
			<to-view-id>/altaForm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
		<!-- Cerrar sesion -->
		<navigation-case>
			<from-action>#{settings.usuario.cerrarSesion}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Asi es mas facil encontrar todo -->
	
	<!--   Registro	 -->
	<navigation-rule>
		<from-view-id>/registrarse.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuario.registrar}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/iniciarSesion.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Iniciar sesion	 -->
	<navigation-rule>
		<from-view-id>/iniciarSesion.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuario.iniciarSesion}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/misdatos.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Listar viajes -->
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>moreInfo</from-outcome>
			<to-view-id>/viaje.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Vista viaje -->
	<navigation-rule>
		<from-view-id>/viaje.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>solicitarPlaza</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<!-- Cosas Notaneitor -->
	<navigation-rule>
		<from-view-id>/altaForm.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.salva}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/editForm.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.salva}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
