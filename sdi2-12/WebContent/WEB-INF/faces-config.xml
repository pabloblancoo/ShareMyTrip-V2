<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuario</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanUsuario</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viajes</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanViajes</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viaje</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanViaje</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>misViaje</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanMisViajes</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
		<!-- Cerrar sesion -->
		<navigation-case>
			<from-outcome>cerrarSesion</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Asi es mas facil encontrar todo -->
	
	<!--   Registro	 -->
	<navigation-rule>
		<from-view-id>/registrarse.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuario.registrar}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/iniciarSesion.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Iniciar sesion	 -->
	<navigation-rule>
		<from-view-id>/iniciarSesion.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuario.iniciarSesion}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/a/misdatos.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Listar viajes -->
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>moreInfo</from-outcome>
			<to-view-id>/viaje.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Registrar viajes -->
	
	<navigation-rule>
		<from-view-id>/registrarViaje.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>usuario_no_valido</from-outcome>
			<to-view-id>/iniciarSesion.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Vista viaje -->
	<navigation-rule>
		<from-view-id>/viaje.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>solicitarPlaza</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Mis viajes -->
	<navigation-rule>
		<from-view-id>/a/misViaje.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{misViajes.cancelarPlaza(viaje)}</from-action>
			<to-view-id>/a/misViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>
